
[push]
  default = simple
  
[color]
  status = auto
  branch = auto
  diff = auto

[alias]	
  s = status
  d = diff
  a = add
  co = checkout
  ci = commit 
  cim = commit -m
  cia = commit --amend
  b = branch
  l = log
  f = fetch
  r = reset
  ps = push
  pl = pull
  sub = submodule
  t = log --graph --oneline --decorate
  tree = log --graph --oneline --decorate
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true

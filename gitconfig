
[color]
  status = auto
  branch = auto
  diff = auto

[alias]
  s = status
  d = diff
  ds = diff --staged
  a = add
  co = checkout
  ci = commit
  cim = commit -m
  cia = commit --amend
  b = branch
  f = fetch
  r = reset
  ps = push
  pl = pull
  sub = submodule
  l = log --decorate --graph --date=short --pretty=format:'%C(green)%d %C(cyan)%h %C(magenta)%ad %C(yellow)%an %C(white)%s'

[push]
	default = simple

[branch]
	autosetuprebase = always
[core]
	autocrlf = input
	editor = /usr/bin/vim
	excludesfile = ~/.dotfiles/gitignore
[user]
	email = oliver.michel@editum.de
	name = Oliver Michel
[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
